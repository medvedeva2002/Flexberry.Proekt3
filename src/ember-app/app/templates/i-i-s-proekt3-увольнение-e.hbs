<h3 class="ui header">{{t "forms.i-i-s-proekt3-увольнение-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt3-увольнение-e.датаУвольнения-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаУвольнения
      class=(if (v-get validationModel "датаУвольнения" "isInvalid") "error")
      data-test-i-i-s-proekt3-увольнение-e-датаУвольнения=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаУвольнения" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt3-увольнение-e.сотрудники-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудники
      displayAttributeName="фИО"
      autocomplete=true
      relationName="сотрудники"
      projection="СотрудникиL"
      title=(t "forms.i-i-s-proekt3-увольнение-e.сотрудники-caption")
      readonly=readonly
      componentName="сотрудникиLookup"
      class=(if (v-get validationModel "сотрудники" "isInvalid") "error")
      data-test-i-i-s-proekt3-увольнение-e-сотрудники=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудники" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.сотрудники.должность
      class=(if (v-get validationModel.сотрудники "должность" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt3-увольнение-e.сотрудники.должность-caption")
      data-test-i-i-s-proekt3-увольнение-e-сотрудники-должность=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.сотрудники "должность" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.сотрудники.ранг
      class=(if (v-get validationModel.сотрудники "ранг" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt3-увольнение-e.сотрудники.ранг-caption")
      data-test-i-i-s-proekt3-увольнение-e-сотрудники-ранг=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.сотрудники "ранг" "message")}}
  </div>
  <div class="field" data-test-i-i-s-proekt3-увольнение-e-причина="true">
    <label>{{t "forms.i-i-s-proekt3-увольнение-e.причина-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-proekt3-причины")
      value=model.причина
      class=(if (v-get validationModel "причина" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "причина" "message")}}
  </div>
</form>
